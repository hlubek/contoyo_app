!!! Strict
%html{html_attrs(I18n.locale)}
  %head
    %title= @content_for_title
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #main-menu
      Main menu
      = menu :depth => 1
    %h1= @content_for_title
    Sub menu
    #sub-menu
      = menu :entry_level => 1, :expand_only_active => true
    #content= yield
    #sidebar= yield :sidebar
